doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Github-Users
        //- favicon
        link(rel='apple-touch-icon' sizes='180x180' href='img/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='img/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='img/favicon-16x16.png')
        link(rel='manifest' href='img/site.webmanifest')
        //- bootstrap 5 cdn
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous') 
        //- fontAwesome
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css' integrity='sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==' crossorigin='anonymous' referrerpolicy='no-referrer')
        //- font
        link(rel='preconnect' href='https://fonts.googleapis.com')
        link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
        link(href='https://fonts.googleapis.com/css2?family=Sono:wght@500&display=swap' rel='stylesheet')
        //- main css file
        link(rel="stylesheet", href="css/style.min.css")
    body 
        .container-fluid     
            .container
                .row  
                    header.col-4.offset-4.text-white.mt-5.user-select-none
                        include includes/_heading
                .row 
                    .col-8.offset-2.text-white.position-relative.mt-5.gx-0.d-flex.justify-content-around.align-items-center
                        section#search
                            input#search_input(type='text' placeholder='search')
                            button#search_btn
                                i.fas.fa-search  
                        a#github_icon(href="https://github.com/Silent-Watcher" target="_blank").fs-1.link-light.ms-2
                            i.fa-brands.fa-github   
            .container 
                .row 
                    main.col-10.offset-1.bg-dark.mt-5.overflow-hidden
                        .row 
                            section.col-6.text-center.text-white.user-select-none#main_left
                                #avatar_wrapper.text-center.d-flex.justify-content-center.align-items-center
                                    figure.w-50.bg-primary.rounded-circle.overflow-hidden.mt-4.mb-1
                                        img(src="img/male_avatar.png", alt="").img-fluid
                                button#view_btn(type="button").btn.btn-secondary view
                                h2#name ali.t.nazari 
                                h5#id silent-watcher
                                a(href="").link-light.text-decoration-none
                                    span 
                                        i.fa-solid.fa-link
                                    span.ms-2 www.ali.com
                                #Info.d-flex.justify-content-around.align-items-center.my-3.w-75.mx-auto
                                    #followers
                                        p#followers_count.mb-0.text-center 20
                                        p.mb-0.mt-1 Followers
                                    #following
                                        p#following_count.mb-0.text-center 20
                                        p.mb-0.mt-1 Following
                                    #publicRepo
                                        p#publicRepo_count.mb-0.text-center 20
                                        p.mb-0.mt-1 Public Repos
                                
                            section.col-6
                               p.fs-1.text-white.text-center.mt-3.user-select-none.highlight Projects
                               section#project_list
                                    p.fs-4.p-1.ps-3.text-light project no.1

                                    
    script(src="js/app.min.js") 