doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Github-Users
        //- favicon
        link(rel='apple-touch-icon' sizes='180x180' href='img/apple-touch-icon.png')
        link(rel='icon' type='image/png' sizes='32x32' href='img/favicon-32x32.png')
        link(rel='icon' type='image/png' sizes='16x16' href='img/favicon-16x16.png')
        link(rel='manifest' href='img/site.webmanifest')
        //- bootstrap 5 cdn
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65' crossorigin='anonymous') 
        //- fontAwesome
        link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css' integrity='sha512-SzlrxWUlpfuzQ+pcUCosxcglQRNAq/DZjVsC0lE40xsADsfeQoEypE+enwcOiGjk/bSuGGKHEyjSoQ1zVisanQ==' crossorigin='anonymous' referrerpolicy='no-referrer')
        //- main css file
        link(rel="stylesheet", href="css/style.min.css")
    body 
        .container-fluid     
            .container
                .row  
                    header.col-4.offset-4.text-white.mt-5  
                        include includes/_heading
                .row 
                    .col-8.offset-2.text-white.position-relative.mt-5.gx-0.d-flex.justify-content-around.align-items-center
                        section#search
                            input#search_input(type='text' placeholder='search')
                            button#search_btn
                                i.fas.fa-search  
                        a#github_icon(href="https://github.com/Silent-Watcher" target="_blank").fs-1.link-light.ms-2
                            i.fa-brands.fa-github                         
    script(src="js/app.min.js") 